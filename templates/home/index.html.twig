
{% extends 'base.html.twig' %}

{% block stylesheets %}

    <!-- Parent template styles -->
    {{ parent() }}

    <!-- Homepage styles -->
    <link href="/css/home.css" rel="stylesheet">

{% endblock %}


{% block body %}

    <h1>ACCUEIL</h1>

    {# 
        <?php foreach ($posts as $post): ?>
             <div>
                  <h2><?=$post->title;?></h2>
             </div>
        <?php endforeach; ?>
     #}

    {% for post in posts %}
        
        <div class="card-body">
            <h2 class="card-title">{{ post.title }}</h2>
            <span class="badge badge-secondary">Cat: {{ post.category.name }}</span>
        
            <p>Créé par {{ post.author }} le {{ post.createdAt|date("d/m/Y") }}</p>
            <img src="{{ post.image }}" alt="{{ post.title }}">
            <p>{{ post.content|slice(150) }}</p>
            <a href="{{ path('post.index', {'slug':post.slug}) }}">Lire la suite</a>
        </div>

        
    {% endfor %}


{% endblock %}

